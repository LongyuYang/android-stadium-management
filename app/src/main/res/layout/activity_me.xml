<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:leon="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".Me">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#fff"
        android:gravity="center"
        android:layout_weight="0.3"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="275dp"
            android:layout_height="81dp"
            android:contentDescription="@string/Me_UserAvator"
            android:src="@drawable/vector_drawable_cat" />

        <TextView
            android:id="@+id/displayUname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/Me_Username"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#fff"
        android:gravity="center"
        android:layout_weight="0.6"
        android:orientation="vertical">

        <com.leon.lib.settingview.LSettingItem
            android:id="@+id/MyRecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            leon:leftIcon="@mipmap/ic_history"
            leon:leftText="预约记录" />

        <com.leon.lib.settingview.LSettingItem
            android:id="@+id/MyCredit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            leon:leftIcon="@mipmap/ic_credit"
            leon:leftText="个人信用" />

        <com.leon.lib.settingview.LSettingItem
            android:id="@+id/Help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            leon:leftIcon="@mipmap/ic_help"
            leon:leftText="使用帮助" />

        <com.leon.lib.settingview.LSettingItem
            android:id="@+id/signOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            leon:leftIcon="@mipmap/ic_quit"
            leon:leftText="退出登录" />

        <com.leon.lib.settingview.LSettingItem
            android:id="@+id/UseLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            leon:isShowUnderLine="false"
            leon:leftIcon="@mipmap/ic_uselocation"
            leon:leftText="使用位置"
            leon:rightStyle="iconSwitch" />
    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_nav_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        app:itemIconTint="@color/gray"
        app:itemTextColor="@color/gray"
        app:menu="@menu/bottomtab"
        leon:itemHorizontalTranslationEnabled="false"></android.support.design.widget.BottomNavigationView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"/>

</LinearLayout>